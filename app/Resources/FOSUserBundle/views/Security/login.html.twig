{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="widget-main">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h4 class="header blue lighter bigger">
            <i class="ace-icon fa fa-coffee green"></i>
            Please Enter Your Information
        </h4>

        <div class="space-6"></div>

        <form method="post" action="{{ path("fos_user_security_check") }}">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

            <script>
                var isLoginPage = true;
            </script>
            <input type="hidden" name="client_time_offset" id="clientTimeOffset"/>

            <fieldset>
                <label class="block clearfix">
                <span class="block input-icon input-icon-right">
                    <input class="form-control" placeholder="{{ 'security.login.username'|trans }}"
                           type="text" name="_username" value="{{ last_username }}" required="required"/>
                    <i class="ace-icon fa fa-user"></i>
                </span>
                </label>

                <label class="block clearfix">
                <span class="block input-icon input-icon-right">
                    <input class="form-control" placeholder="{{ 'security.login.password'|trans }}"
                           type="password" id="password" name="_password" required="required"/>
                    <i class="ace-icon fa fa-lock"></i>
                </span>
                </label>

                <div class="space"></div>

                <div class="clearfix">
                    <label class="inline">
                        <input class="ace" type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                        <span class="lbl"> {{ 'security.login.remember_me'|trans }}</span>
                    </label>

                    <button type="submit" class="width-35 pull-right btn btn-sm btn-primary" name="_submit"
                            value="{{ 'security.login.submit'|trans }}">
                        <i class="ace-icon fa fa-key"></i>
                        <span class="bigger-110">{{ 'security.login.submit'|trans }}</span>
                    </button>
                </div>

                <div class="space-4"></div>
            </fieldset>
        </form>
    </div>
    <!-- /.widget-main -->

    <div class="toolbar clearfix">
        <div>
            <a href="{{ path('fos_user_resetting_request') }}" data-target="#forgot-box"
               class="forgot-password-link">
                <i class="ace-icon fa fa-arrow-left"></i>
                I forgot my password
            </a>
        </div>

        <div>
            <a href="{{ path('fos_user_registration_register') }}" class="user-signup-link">
                I want to register
                <i class="ace-icon fa fa-arrow-right"></i>
            </a>
        </div>
    </div>
{% endblock fos_user_content %}
